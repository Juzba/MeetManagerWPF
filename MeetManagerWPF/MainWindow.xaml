<Window
    x:Class="MeetManagerWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodel="clr-namespace:MeetManagerWPF.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
    Title="MainWindow"
    FontSize="28"
    Width="1000"
    Height="550"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Command="{Binding NavigateToRegisterCommand}" Margin="15 0" Padding="10 5" VerticalAlignment="Center" Content="Register"></Button>
            <Button Command="{Binding NavigateToLoginCommand}" Margin="15 0" Padding="10 5" VerticalAlignment="Center" Content="Login"></Button>
        </StackPanel>
        
        <Frame x:Name="FrameMW" NavigationUIVisibility="Hidden" Grid.Row="1"></Frame>
        
    </Grid>

</Window>
