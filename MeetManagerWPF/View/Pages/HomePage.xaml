<Page
    x:Class="MeetManagerWPF.View.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerWPF.View.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:MeetManagerWPF.ViewModel"
    Title="HomePage"
    d:DataContext="{d:DesignInstance Type=viewmodel:HomeViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontSize="30"
    Foreground="#FFD340"
    mc:Ignorable="d">

    <Grid Background="#20448C">
        <StackPanel Margin="0,30" HorizontalAlignment="Center">
            <TextBlock
                FontSize="50"
                Foreground="#FFBC24"
                Text="Home Page" />
            <Button
                Height="60"
                Margin="0,30"
                Command="{Binding ButtonClickCommand}"
                Content="Click me!" />
            <TextBox Text="{Binding Text}" />


        </StackPanel>
    </Grid>
</Page>
