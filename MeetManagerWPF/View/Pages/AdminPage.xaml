<Page
    x:Class="MeetManagerWPF.View.Pages.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerWPF.View.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:MeetManagerWPF.ViewModel"
    Title="AdminPage"
    d:DataContext="{d:DesignInstance Type=viewmodel:AdminViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontSize="30"
    Foreground="#FFD340"
    mc:Ignorable="d">

    <Grid Background="#20448C">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="80*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Row="1"
            Grid.Column="1"
            Height="50"
            Margin="0"
            Padding="10,5"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Command="{Binding SaveChangesCommand}"
            Content="Uložit změny"
            FontSize="25"
            Foreground="#FFBC24" />

        <TextBlock
            HorizontalAlignment="Center"
            FontSize="50"
            Foreground="#FFBC24"
            Text="Admin Page" />

        <DataGrid
            Grid.Row="1"
            
            Margin="20,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            Background="#086CB4"
            ItemsSource="{Binding Users, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    MinWidth="70"
                    Binding="{Binding Id}"
                    Header="Id"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    MinWidth="150"
                    Binding="{Binding Name}"
                    Header="UserName" />
                <DataGridTextColumn
                    MinWidth="150"
                    Binding="{Binding Email}"
                    Header="Email" />
                <DataGridTextColumn
                    MinWidth="140"
                    Binding="{Binding Role.RoleName, Mode=TwoWay}"
                    Header="Role" />
                <DataGridTemplateColumn MinWidth="80" Header="Akce">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding}"
                                Content="Smazat" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
