<Page
    x:Class="MeetManagerWPF.View.Pages.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerWPF.View.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:MeetManagerWPF.ViewModel"
    Title="AdminPage"
    d:DataContext="{d:DesignInstance Type=viewmodel:AdminViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontSize="30"
    mc:Ignorable="d">

    <Grid Background="#20448C">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="80*" />
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            FontSize="50"
            Foreground="#FFBC24"
            Text="Admin Page" />

        <DataGrid
            Grid.Row="1"
            MaxWidth="600"
            Margin="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            AutoGenerateColumns="False"
            Background="#086CB4"
            ItemsSource="{Binding Users, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding Id}"
                    Header="Id"
                    IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Name}" Header="UserName" />
                <DataGridTextColumn Binding="{Binding Role.RoleName, Mode=TwoWay}" Header="Role" />
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Page>
