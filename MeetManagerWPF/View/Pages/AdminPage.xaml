<Page
    x:Class="MeetManagerWPF.View.Pages.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerWPF.View.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:MeetManagerWPF.ViewModel"
    Title="AdminPage"
    d:DataContext="{d:DesignInstance Type=viewmodel:AdminViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontSize="30"
    mc:Ignorable="d">

    <Grid Background="#20448C">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="80*" />
        </Grid.RowDefinitions>

        <TextBlock
            HorizontalAlignment="Center"
            FontSize="50"
            Foreground="#FFBC24"
            Text="Admin Page" />

        <DataGrid
            ItemsSource="{Binding Users}"
            Grid.Row="1"
            Margin="10"
            AutoGenerateColumns="True"
            Background="#086CB4">
            <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
            <DataGridTextColumn Header="UserName" Binding="{Binding Name}" />
            <DataGridTextColumn Header="Role" Binding="{Binding Role.RoleName}" />
        </DataGrid>

    </Grid>
</Page>
