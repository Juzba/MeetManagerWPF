<Page
    x:Class="MeetManagerWPF.View.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:MeetManagerWPF.View.UserControls"
    xmlns:ViewModel="clr-namespace:MeetManagerWPF.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerWPF.View.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginPage"
    d:DataContext="{d:DesignInstance Type=ViewModel:LoginViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="#20448C">

        <Grid.RowDefinitions>
            <RowDefinition MinHeight="100" />
            <RowDefinition Height="300" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition MinWidth="330" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.ColumnSpan="3"
            Margin="0,0,0,15"
            FontSize="60"
            Foreground="#FFBC24"
            Text="Login"
            TextAlignment="Center" />

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <UserControls:Input
                Margin="10"
                Placeholder="Email"
                TextInp="{Binding Email, Mode=TwoWay}" />

            <UserControls:Input
                Margin="10"
                Placeholder="Heslo"
                TextInp="{Binding Password, Mode=TwoWay}" />

            <Button
                Width="200"
                Margin="20"
                Background="#FFBC24"
                Command="{Binding LoginCommand}"
                Content="Přihlásit"
                FontSize="30"
                Foreground="#20448C" />

        </StackPanel>
    </Grid>
</Page>
