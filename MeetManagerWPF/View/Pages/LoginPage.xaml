<Page
    x:Class="MeetManagerWPF.View.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:MeetManagerWPF.View.UserControls"
    xmlns:ViewModel="clr-namespace:MeetManagerWPF.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerWPF.View.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginPage"
    d:DataContext="{d:DesignInstance Type=ViewModel:LoginViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="#20448C">

        <Grid.RowDefinitions>
            <RowDefinition MinHeight="100" />
            <RowDefinition MinHeight="40" />
            <RowDefinition Height="300" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition MinWidth="400" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button
            Grid.Column="2"
            Width="150"
            Height="40"
            Panel.ZIndex="10"
            Command="{Binding InstaAccessCommand}"
            Content="Instant Access" />

        <TextBlock
            Grid.ColumnSpan="3"
            Margin="0,0,0,15"
            FontSize="60"
            Foreground="#FFBC24"
            Text="Login"
            TextAlignment="Center" />

            <TextBlock
                Grid.Row="1"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Center"
                FontSize="20"
                Text="{Binding ErrorMessage}"
                Foreground="red"
               
                 />
        
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">


            <UserControls:Input
                Width="350"
                Margin="10"
                Placeholder="Email"
                TextInp="{Binding Email, Mode=TwoWay}" />

            <UserControls:Input
                Width="350"
                Margin="10"
                Placeholder="Heslo"
                TextInp="{Binding Password, Mode=TwoWay}" />

            <Button
                Width="200"
                Height="50"
                Margin="20"
                HorizontalAlignment="Center"
                Background="#FFBC24"
                Command="{Binding LoginCommand}"
                Content="Přihlásit"
                FontSize="30"
                Foreground="#20448C" />

        </StackPanel>
    </Grid>
</Page>
