<Page
    x:Class="MeetManagerWPF.View.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:MeetManagerWPF.View.UserControls"
    xmlns:ViewModel="clr-namespace:MeetManagerWPF.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerWPF.View.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DataContext="{d:DesignInstance Type=ViewModel:LoginViewModel}"
    Title="LoginPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <!--<Page.DataContext>
        <ViewModel:LoginViewModel/>
    </Page.DataContext>-->

    <Grid Background="#20448C">

        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="300" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition MinWidth="330" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.ColumnSpan="3"
            Margin="0,0,0,15"
            FontSize="60"
            Foreground="#FFBC24"
            Text="Login"
            TextAlignment="Center" />

        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <UserControls:Input
                Text="{Binding LoginUserName, Mode=TwoWay}"
                Margin="10"
                Background="#008CDB"
                Foreground="#FFD340"
                Placeholder="Jméno"
                PlaceholderColor="#20448C" />
            <UserControls:Input
                Margin="10"
                Background="#008CDB"
                Foreground="#FFD340"
                Placeholder="Heslo"
                PlaceholderColor="#20448C" />
            <Button
                Width="200"
                Margin="20"
                Background="#FFBC24"
                Command="{Binding LoginCommand}"
                Content="Přihlásit"
                FontSize="30"
                Foreground="#20448C" />

            <Button
                Width="200"
                Background="Transparent"
                BorderBrush="Transparent"
                Command="{Binding NavigateToRegisterCommand}"
                Content="Registrovat"
                FontSize="20" />
        </StackPanel>
    </Grid>
</Page>
