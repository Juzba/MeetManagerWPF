<Page
    x:Class="MeetManagerWPF.View.Pages.Manager.CreateEventPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MeetManagerWPF.View.Pages.Manager"
    xmlns:manager="clr-namespace:MeetManagerWPF.ViewModel.Manager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CreateEventPage"
    d:DataContext="{d:DesignInstance Type=manager:CreateEventViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontSize="20"
    Foreground="#DBF227"
    mc:Ignorable="d">

    <Grid Background="#086CB4">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="7*" MaxWidth="600" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="38"
            Foreground="#FFBC24"
            Text="Vytvořit Událost" />


        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Content="Název: " />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                MaxWidth="350"
                Margin="5"
                MaxLength="25" />

            <Label Grid.Row="1" Content="Začátek:" />
            <DatePicker
                Grid.Row="1"
                Grid.Column="1"
                MaxWidth="350"
                Margin="5" />

            <Label Grid.Row="2" Content="Konec:" />
            <DatePicker
                Grid.Row="2"
                Grid.Column="1"
                MaxWidth="350"
                Margin="5" />

            <Label
                Grid.Row="3"
                MaxWidth="350"
                Margin="0,0,15,0"
                Content="Typ Události:" />
            <ComboBox
                Grid.Row="3"
                Grid.Column="1"
                MaxWidth="350"
                Margin="5"
                DisplayMemberPath="Name"
                ItemsSource="{Binding DataContext.EventTypeList, RelativeSource={RelativeSource AncestorType=Page}}"
                SelectedValue="{Binding SelectedEventType}" />

            <Label Grid.Row="4" Content="Pokoj:" />
            <ComboBox
                Grid.Row="4"
                Grid.Column="1"
                MaxWidth="350"
                Margin="5"
                DisplayMemberPath="Name"
                ItemsSource="{Binding DataContext.RoomList, RelativeSource={RelativeSource AncestorType=Page}}" />

            <Label Grid.Row="5" Content="Popis:" />
            <RichTextBox
                Grid.Row="5"
                Grid.Column="1"
                MaxWidth="350"
                MaxHeight="100"
                Margin="5" />
        </Grid>

        <StackPanel Grid.Row="1" Grid.Column="2">

            <Button
                MaxWidth="300"
                Margin="10"
                VerticalAlignment="Top"
                Command="{Binding CreateEventCommand}"
                Content="Vytvořit" />
            <Button
                Grid.Row="1"
                Grid.Column="2"
                MaxWidth="300"
                Margin="10"
                VerticalAlignment="Top"
                Command="{Binding DeleteEventCommand}"
                Content="Smazat" />

            <TextBlock
                Margin="10"
                Foreground="Red"
                Text="{Binding ErrorMessage}"
                TextAlignment="Center" />
        </StackPanel>

    </Grid>
</Page>
