<UserControl x:Class="MeetManagerWPF.View.UserControls.Input"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeetManagerWPF.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid Background="{Binding Background}" MinWidth="300">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TextBlock
            x:Name="TextBlockPlaceHolder"
            Margin="5 0 0 0" 
            VerticalAlignment="Center" 
            FontSize="30"
            Foreground="{Binding PlaceholderColor}"
            Text="{Binding Placeholder}">
        </TextBlock>
        <TextBox
            x:Name="TextBoxInput"
            BorderBrush="Transparent"
            MaxLength="15"
            Margin="5 0 0 0"
            Foreground="{Binding Foreground}"
            VerticalAlignment="Center" 
            FontSize="30"
            Background="Transparent"
            TextChanged="TextBoxInput_TextChanged"
            >
        </TextBox>
        
        
        <Button Grid.Column="1"
                Content="X" 
                HorizontalAlignment="Right" 
                Width="50"
                FontSize="30"
                Foreground="#20448C"
                Background="Transparent"
                Click="Button_Clear"
                >
        </Button>
    </Grid>
</UserControl>
